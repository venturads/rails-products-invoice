<%= form_for @product, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :model, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :model, :class => 'form-control' %>
    </div>
    <%=f.error_span(:model) %>
  </div>
  <div class="form-group">
    <%= f.label :sku, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :sku, :class => 'form-control' %>
    </div>
    <%=f.error_span(:sku) %>
  </div>
  <div class="form-group">
    <%= f.label :serial_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :serial_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:serial_number) %>
  </div>
  <div class="form-group">
    <%= f.label :cost_price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :cost_price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:cost_price) %>
  </div>
  <div class="form-group">
    <%= f.label :price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:price) %>
  </div>
  <div class="form-group">
    <%= f.label :inventory, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :inventory, :class => 'form-control' %>
    </div>
    <%=f.error_span(:inventory) %>
  </div>
  <div class="form-group">
    <%= f.label :vendor, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :vendor, :class => 'form-control' %>
    </div>
    <%=f.error_span(:vendor) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
