<%= form_for @invoice, :html => { :class => "form-horizontal invoice" } do |f| %>

  <% if @invoice.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@invoice.errors.count, "error") %> prohibited this invoice from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @invoice.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :line_items, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :line_items, :class => 'form-control' %>
    </div>
    <%=f.error_span(:line_items) %>
  </div>
  <div class="form-group">
    <%= f.label :total_price, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :total_price, :class => 'form-control' %>
    </div>
    <%=f.error_span(:total_price) %>
  </div>
  <div class="form-group">
    <%= f.label :discount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :discount, :class => 'form-control' %>
    </div>
    <%=f.error_span(:discount) %>
  </div>
  <div class="form-group">
    <%= f.label :amount_paid, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :amount_paid, :class => 'form-control' %>
    </div>
    <%=f.error_span(:amount_paid) %>
  </div>
  <div class="form-group">
    <%= f.label :due_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :due_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:due_date) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                invoices_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
